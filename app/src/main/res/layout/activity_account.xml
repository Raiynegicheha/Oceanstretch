<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dogo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:alpha="0.7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="36dp"
        android:text="@string/app_name"
        android:textColor="@color/primary"
        android:fontFamily="@font/bangers"
        style="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/tv_appname"
        />
    
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_appname"
        android:id="@+id/btnradio">
        
        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/rb_poultry"
            android:layout_height="wrap_content"
            android:text="Poultry"
            android:textSize="28dp"
            />
        <RadioButton
            android:id="@+id/rb_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet"
            android:textSize="28dp"/>
        <RadioButton
            android:id="@+id/rb_domestic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domestic"
            android:textSize="28dp"/>
        <RadioButton
            android:id="@+id/rb_wild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wild"
            android:textSize="28dp"/>
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnradio"
        android:text="Add description."
        android:id="@+id/btnaddpost">

    </Button>


</RelativeLayout>
